<div class="form">
  <%= form_for(:user, :url => signup_path, :remote => true, html: { class: 'signup-form' } ) do |form| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-input-group">
        <%= form.text_field :first_name, placeholder: 'First Name', autofocus: true %>
      </div>
      <div class="form-input-group">
        <%= form.text_field :last_name, placeholder: 'Last Name' %>
      </div>
      <div class="form-input-group">
        <%= form.email_field :email, placeholder: 'Email' %>
      </div>
      <div class="form-input-group">
        <%= form.password_field :password, placeholder: 'Password' %>
      </div>
      <div class="form-input-group">
        <%= form.password_field :password_confirmation, placeholder: 'Confirm Password' %>
      </div>
      <%= form.submit "Sign up for free", class: 'btn btn-primary' %>
  <% end %>
</div>