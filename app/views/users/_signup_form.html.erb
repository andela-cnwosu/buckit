<%= form_for(:user, :url => signup_path, :remote => true ) do |form| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= form.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
    <%= form.submit "Sign Up", class: 'btn btn-default btn-register' %>
<% end %>